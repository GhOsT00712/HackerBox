<% if(active=='hackdetails' ){ %>
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-8">
                    <div class="mb-5">
                        <div class="section-title position-relative mb-5">
                            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Hack
                                Detail</h6>
                            <h1 class="display-4">
                                <%=data.name%>
                            </h1>
                        </div>
                        <img class="img-fluid rounded w-100 mb-4" src="<%=data.imageUrl%>" alt="Image">
                        <p>
                            <%=data.description%>
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 mt-5 mt-lg-0">
                    <div class="bg-primary mb-5 py-3">
                        <h3 class="text-white py-3 px-4 m-0">Team Members</h3>
                        <% data.team.forEach(member=>{ %>
                            <div class="d-flex justify-content-between border-bottom px-4">
                                <h6 class="text-white my-3"><%=member.type%></h6>
                                <h6 class="text-white my-3">
                                    <%=member.name%>
                                </h6>
                            </div>                    
                            <%}) %>
                            <h5 class="text-white py-3 px-4 m-0">Hack open to join: Yes</h5>
                            <% if(!(data.team.includes(currentUser))){ %>
                            <div class="py-3 px-4">
                                <a class="btn btn-block btn-secondary py-3 px-5" href="/addmember/<%=data.ugid%>">Join now</a>
                            </div>  
                            <%}%>                             
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%} %>