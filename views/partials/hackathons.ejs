<% if(active=='index' ){ %>
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">
                        Hackathons</h6>
                    <h1 class="display-4">Latest Hackathons</h1>
                </div>
            </div>
        </div>
        <div class="owl-carousel courses-carousel">
            <% data.forEach(hackathon=>{ %>
                <div class="courses-item position-relative">
                    <img class="img-fluid" src="<%=hackathon.data.imageUrl%>>" alt="">
                    <div class="courses-text">
                        <h4 class="text-center text-white px-3">
                            <%=hackathon.data.name%>
                        </h4>
                        <div class="border-top w-100 mt-3">
                            <div class="d-flex justify-content-between p-4">
                                <span class="text-white"><i class="fa fa-user mr-2"></i>
                                    <%=hackathon.data.tags%>
                                </span>
                                <span class="text-white"><i class="fa fa-star mr-2"></i>Status
                                    <small>
                                        <% if(hackathon.data.isActive==true){%>(Active)<%}else{%>
                                                (Closed)<%}%>
                                    </small></span>
                            </div>
                        </div>
                        <div class="w-100 bg-white text-center p-4">
                            <a class="btn btn-primary" href="/detail/<%=hackathon.id%>">Hackathon Detail</a>
                        </div>
                    </div>
                </div>
                <%}) %>
        </div>
    </div>
    <% } %>